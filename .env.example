# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production

# Database (leave as default for SQLite)
DATABASE_URL=sqlite:///theradash.db

# Firebase Configuration
FIREBASE_CREDENTIALS_PATH=/path/to/your/firebase-credentials.json

# REDCap Configuration
REDCAP_API_URL=https://redcap.your-institution.edu/api/
REDCAP_API_TOKEN=your-redcap-api-token-here
REDCAP_FILTER_LOGIC=[enrollment_status]="1"

# User Selection Configuration
# Options: 'redcap' (use REDCap filter only), 'uids' (use Firebase UIDs only), 'both' (combine both methods), 'all' (pull all Firebase users)
USER_SELECTION_MODE=redcap
# Comma-separated list of Firebase UIDs to monitor (used when mode is 'uids' or 'both')
# Useful for external testers who are not in REDCap
FIREBASE_UIDS=uid1,uid2,uid3

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890
TWILIO_ADMIN_NUMBERS=+1234567890,+0987654321

# Security Configuration
IP_PREFIX_ALLOWED=192.168.1
REGISTRATION_KEY=your-secure-registration-key-change-this

# Risk Score Configuration
RISK_SCORE_THRESHOLD=0.7

# Email Configuration (for automated compliance emails)
EMAIL_SMTP_SERVER=smtp.office365.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@institution.edu
EMAIL_PASSWORD=your-email-password-or-app-password
EMAIL_FROM_ADDRESS=therabot@dartmouth.edu
EMAIL_LOOKBACK_DAYS=2
EMAIL_DRY_RUN=false
# EMAIL_TEST_RECIPIENT=test@example.com  # Uncomment to redirect all emails to test address

# Multi-project REDCap Configuration (JSON array format)
# Each project can have an optional "email_event" field to specify where email is stored
# if it's in a different event than the main data
